.highlight
    overflow: auto

    tr:hover td 
        background: none

    figcaption
        font-size: 12px
        padding-bottom: 5px

    figcaption a
        float: right

.gutter
    width: 7%
    

highlight-comment = #999999
highlight-red = #e24a4d
highlight-orange = #f99157
highlight-yellow = #ffcc66
highlight-green = #4f9a4f
highlight-aqua = #48baba
highlight-blue = #3072b4
highlight-purple = #af26af

pre
    .comment
    .title
        color: highlight-comment
    .variable
    .attribute
    .tag
    .regexp
    .ruby .constant
    .xml .tag .title
    .xml .pi
    .xml .doctype
    .html .doctype
    .css .id
    .css .class
    .css .pseudo
        color: highlight-red
    .number
    .preprocessor
    .built_in
    .literal
    .params
    .constant
        color: highlight-orange
    .class
    .ruby .class .title
    .css .rules .attribute
        color: highlight-green
    .string
    .value
    .inheritance
    .header
    .ruby .symbol
    .xml .cdata
        color: highlight-green
    .css .hexcolor
        color: highlight-aqua
    .function
    .python .decorator
    .python .title
    .ruby .function .title
    .ruby .title .keyword
    .perl .sub
    .javascript .title
    .coffeescript .title
        color: highlight-blue
    .keyword
    .javascript .function
        color: highlight-purple

.gutter
    border-right: border-default