.article-title
    display: block
    margin-bottom: space-3

.content p, .content h1, .content h2, .content h3, .content h4, .content h5, .content h6, .content table, .content ol, .content ul, .content iframe, .content dl, .content hr, .gist
    margin-bottom: space-2

.content h2,.content h3
    padding-top: space-2

.content h3
    border-bottom: border
    padding-bottom: 5px

.content
    font-size: fs-2

.article-title
    font-size: fs-4

blockquote
    line-height: 1.2
    margin-left: space-3
    font-family: ff
    font-size: fs-3

blockquote footer
    padding-top: space-2
    position: relative
    top: -20px
    font-size: fs-1

blockquote cite
    &:before
        content: "â€”"
        padding: 0 0.5em

.pullquote
    text-align: left
    width: 50%
    margin: 0

    &.left
        margin-right: 0.5em

    &.right
        margin-left: 0.5em
        text-align: right

table
    width: 100%

thead th,tbody td
    border: border
    padding: 5px space-1

.lines td
    border: none

.meta
    border-top: border
    margin-top: space-3
    padding-top: space-0

.meta-tags:before
    content: "Tag: "

.meta-cats:before
    content: "Category:  "

.content-nav
    padding: space-4 0 0
    font-size: fs-0
    text-transform: uppercase
    position: relative
    letter-spacing: 1px

/*
    Responsive iframe
*/
.video-container
    position: relative
    padding-top: (9 / 16 * 100)% // 16:9 ratio
    height: 0
    overflow: hidden
    margin-bottom: 40px

    iframe, object, embed
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%
        margin-top: 0